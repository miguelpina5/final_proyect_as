<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">

    <!-- ÁRBOL PRINCIPAL COMBINADO -->
    <BehaviorTree ID="BehaviorTree">
        <!-- Secuencia de Control original -->
        <Sequence name="Control">
            <RetryUntilSuccessful num_attempts="10">
                <Action ID="RequestPlayersNode" encontrados="0" players="{num}"/>
            </RetryUntilSuccessful>
            <RetryUntilSuccessful num_attempts="6">
                <Fallback name="Jugar">
                    <Condition ID="FinishNode" encontrados="{encontrados}" players="{num}"/>
                    <ForceFailure>
                        <Sequence name="Partida">
                            <Action ID="GetWP" WayPoint="{wp}"/>
                            <RetryUntilSuccessful num_attempts="10">
                                <Action ID="Navegar" goal="{wp}"/>
                            </RetryUntilSuccessful>
                            <ForceSuccess>
                                <Action ID="DetectPersonNode" encontrados="{encontrados}"/>
                            </ForceSuccess>
                        </Sequence>
                    </ForceFailure>
                </Fallback>
            </RetryUntilSuccessful>
            <Sequence name="FinJuego">
                <Action ID="GetWP" WayPoint="{origin}"/>
                <Action ID="Navegar" goal="{origin}"/>
            </Sequence>
        </Sequence>

        <!-- Secuencia de Patrulla añadido -->
        <Sequence name="PatrolSequence">
            <!-- GetWaypoint tomará el PoseStamped de bb “waypoint” y lo re-publicará con frame/timestamp -->
            <Action ID="GetWaypoint" waypoint="{waypoint}"/>
            <!-- Move recibirá ese mismo “waypoint” como goal -->
            <Action ID="Move"      goal="{waypoint}"/>
        </Sequence>
    </BehaviorTree>

    <!-- MODELO DE NODOS Y PUERTOS FUSIONADO -->
    <TreeNodesModel>
        <!-- Acciones y condiciones del primer modelo -->
        <Action ID="AñadirPerson"/>
        <Action ID="Configuración"/>
        <Action ID="DetectPersonNode">
            <output_port name="encontrados"/>
        </Action>
        <Action ID="DialogConfirmation">
            <input_port name="prompt"/>
        </Action>
        <Condition ID="Finish"/>
        <Condition ID="FinishNode">
            <input_port name="encontrados"/>
            <input_port name="players"/>
        </Condition>
        <Action ID="GetWP">
            <output_port name="WayPoint"/>
        </Action>
        <Action ID="IsPerson"/>
        <Action ID="Listen">
            <output_port name="listen_text"/>
        </Action>
        <Action ID="Move">
            <input_port name="goal"/>
        </Action>
        <Action ID="Navegar">
            <input_port name="goal"/>
        </Action>
        <Action ID="Num_jugadores">
            <input_port name="jugadores"/>
        </Action>
        <Action ID="Query">
            <input_port name="Intention"/>
            <output_port name="intention_value"/>
            <input_port name="text"/>
        </Action>
        <Action ID="RequestPlayersNode">
            <output_port default="0" name="encontrados"/>
            <input_port name="players"/>
        </Action>
        <Action ID="Speak"/>
        <Action ID="speak">
            <input_port name="say_text"/>
        </Action>

        <!-- Nodos del segundo modelo -->
        <Action ID="GetWaypoint">
            <input_port  name="waypoint"/>
            <output_port name="waypoint"/>
        </Action>
    </TreeNodesModel>

</root>
